package com.example.Yazan.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.Yazan.model.entity.Employees;
import com.example.Yazan.repository.EmpRepo;

@Service
public class EmpService {
	@Autowired
	private EmpRepo empRepo;
	
	public Employees getUser() {
		Optional<Employees> emp = this.empRepo.findById(1); // question
		if(emp.isPresent())
			return emp.get();
		return null;
		//or
		//return emp.orElse(null);
	}
}
